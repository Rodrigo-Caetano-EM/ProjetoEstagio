@using ProjetoDeEstagio2
@using ProjetoWeb.Models
@model Aluno
@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir aluno</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Matricula)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Matricula)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CPF)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CPF)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nascimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nascimento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sexo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sexo)
        </dd>
    </dl>

    <h6>Tem certeza que deseja excluir este aluno?</h6>

    @using (Html.BeginForm()){
    <form asp-action="Delete">
        <input type="submit" value="Excluir" class="btn btn-danger" /> 
        <input type="button" value="Voltar" class="btn btn-secondary" onclick="location.href='@Url.Action("SelecionarAluno", "Aluno")'">
    </form>
    }
</div>