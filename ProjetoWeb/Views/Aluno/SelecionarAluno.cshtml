@using ProjetoDeEstagio2
@model IEnumerable<Aluno>

<p>
    @Html.ActionLink("Adicionar novo Aluno", "AdicionarAluno")
</p>

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Matricula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Matricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.ActionLink("Atualizar", "AtualizarAluno", new { matricula = item.Matricula}) 
                @Html.ActionLink("Excluir", "ExcluirAluno", new { matricula = item.Matricula }, new { onclick = "return confirm('Você tem certeza que deseja excluir aluno?');" })
            </td>
        </tr>
    }
</table>
<input type="button" class="button" value="Voltar" onclick="location.href='@Url.Action("Index", "Home")'" />