@using EMRepository
@using ProjetoDeEstagio2
@model IEnumerable<Aluno>

@{
    RepositorioAluno repositorioAluno = new();
}

<p>
    @Html.ActionLink("Adicionar novo Aluno", "AdicionarAluno")
</p>

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Matricula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Matricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.ActionLink("Atualizar", "AtualizarAluno", new { matricula = item.Matricula}) 
                <button onclick="document.getElementById('id01').style.display='block'">Deletar aluno</button>
                <div id="id01" class="modal">
                    <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
                    <form class="modal-content" action="/action_page.php">
                    <div class="container">
                         <h1>Deletar Aluno</h1>
                         <p>Você tem certeza que quer deletar o aluno?</p>

                         <div class="clearfix">
                            <button type="button" class="deletebtn">Deletar</button>
                            <button type="button" class="cancelbtn" onclick=cancelar()>Cancelar</button>
                        </div>
                    </div>
                    </form>
                </div>
            </td>
        </tr>
    }
</table>
<input type="button" class="button" value="Voltar" onclick="location.href='@Url.Action("Index", "Home")'" />


<script>
var modal = document.getElementById('id01');

window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}

function cancelar(){
    modal.style.display = "none";
}
</script>